<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Course button style -->
    <style name="OnboardingCourseButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">103dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">@dimen/font_size_course_button</item>
        <item name="android:textColor">@color/course_button_text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:backgroundTint">@color/course_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
        <item name="strokeColor">@color/course_button_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/button_ripple_dark</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Badge course button style -->
    <style name="OnboardingCourseBadgeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">103dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">@dimen/font_size_course_button</item>
        <item name="android:textColor">@color/badge_button_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:backgroundTint">@color/badge_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
        <item name="rippleColor">@color/button_ripple_light</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Continue button style -->
    <style name="ContinueButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/button_continue_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:backgroundTint">@color/button_continue_background</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="rippleColor">@color/button_ripple_dark</item>
    </style>
</resources>