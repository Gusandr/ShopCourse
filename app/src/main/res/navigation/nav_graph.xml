<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.onboarding.OnboardingFragment"
        android:label="Онбординг"
        tools:layout="@layout/fragment_onboarding">

        <action
            android:id="@+id/action_onboarding_to_registration"
            app:destination="@+id/registrationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.auth.registration.RegistrationFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_registration">

        <action
            android:id="@+id/action_registration_to_list_courses"
            app:destination="@+id/listCoursesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/listCoursesFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.courses.CoursesListFragment"
        android:label="Главный экран"
        tools:layout="@layout/fragment_list_courses">


    </fragment>

</navigation>
