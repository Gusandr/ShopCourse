<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.onboarding.OnboardingFragment"
        android:label="Онбординг"
        tools:layout="@layout/fragment_onboarding">

        <action
            android:id="@+id/action_onboarding_to_registration"
            app:destination="@+id/registrationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@+id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_onboarding_to_list_courses"
            app:destination="@+id/listCoursesFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.auth.login.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_registration"
            app:destination="@+id/registrationFragment"
            app:enterAnim="@anim/slide_in_right" />

        <action
            android:id="@+id/action_login_to_list_courses"
            app:destination="@+id/listCoursesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.auth.registration.RegistrationFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_registration">

        <action
            android:id="@+id/action_registration_to_login"
            app:destination="@+id/loginFragment"
            app:enterAnim="@anim/slide_in_right" />

        <action
            android:id="@+id/action_registration_to_list_courses"
            app:destination="@+id/listCoursesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/listCoursesFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.courses.list.CoursesListFragment"
        android:label="Главный экран"
        tools:layout="@layout/fragment_list_courses">

        <action
            android:id="@+id/action_list_courses_to_favorites"
            app:destination="@+id/favoritesCoursesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/listCoursesFragment"
            app:popUpToInclusive="false" />

    </fragment>

    <fragment
        android:id="@+id/favoritesCoursesFragment"
        android:name="ru.gusandr.shopcourse.presentation.screens.courses.favorites.FavoritesCoursesFragment"
        android:label="Экран избранного"
        tools:layout="@layout/fragment_favorites_courses">

        <action
            android:id="@+id/action_favorites_courses_to_list"
            app:destination="@+id/listCoursesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/favoritesCoursesFragment"
            app:popUpToInclusive="false" />

    </fragment>

</navigation>
