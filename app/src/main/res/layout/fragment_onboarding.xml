<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_background"
    tools:context=".presentation.screens.onboarding.OnboardingFragment">

    <!-- Status bar background -->
    <View
        android:id="@+id/status_bar_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/onboarding_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Time and status icons container -->
    <FrameLayout
        android:id="@+id/status_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Time text -->
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/status_bar_padding_horizontal"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/time_placeholder"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/font_size_status_bar"
            tools:ignore="HardcodedText" />

        <!-- Status icons (WiFi, signal, battery) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/status_bar_padding_horizontal"
            android:orientation="horizontal"
            android:spacing="@dimen/status_icons_spacing">

            <ImageView
                android:id="@+id/signal_icon"
                android:layout_width="@dimen/status_icon_size"
                android:layout_height="@dimen/status_icon_size"
                android:contentDescription="@string/signal_strength"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_signal_cellular_4_bar" />

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="@dimen/status_icon_size"
                android:layout_height="@dimen/status_icon_size"
                android:contentDescription="@string/wifi_status"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_wifi" />

            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="@dimen/status_icon_size"
                android:layout_height="@dimen/status_icon_size"
                android:contentDescription="@string/battery_status"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_battery_full" />
        </LinearLayout>
    </FrameLayout>

    <!-- Main content scroll view -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/content_padding_bottom">

            <!-- Title text with underline accent -->
            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_margin_top"
                android:orientation="vertical"
                android:paddingStart="@dimen/content_padding_horizontal"
                android:paddingEnd="@dimen/content_padding_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/onboarding_title_line1"
                    android:textColor="@color/text_accent_cyan"
                    android:textSize="@dimen/font_size_title"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/main_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title_line_spacing"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/onboarding_title_line2"
                    android:textColor="@color/text_accent_cyan"
                    android:textSize="@dimen/font_size_title"
                    android:textStyle="normal" />

                <!-- Cyan underline accent for subtitle -->
                <View
                    android:layout_width="@dimen/underline_width"
                    android:layout_height="@dimen/underline_height"
                    android:layout_marginTop="@dimen/underline_margin_top"
                    android:background="@color/text_accent_cyan" />
            </LinearLayout>

            <!-- Courses grid container -->
            <GridLayout
                android:id="@+id/courses_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/courses_grid_margin_top"
                android:columnCount="3"
                android:paddingStart="@dimen/grid_padding_horizontal"
                android:paddingEnd="@dimen/grid_padding_horizontal"
                android:rowCount="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_container">

                <!-- First row -->
                <Button
                    android:id="@+id/btn_administration"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_administration"
                    android:layout_row="0"
                    android:layout_column="0" />

                <View
                    android:layout_width="@dimen/grid_item_empty_width"
                    android:layout_height="@dimen/grid_item_height"
                    android:layout_row="0"
                    android:layout_column="1" />

                <FrameLayout
                    android:layout_width="@dimen/grid_item_badge_width"
                    android:layout_height="@dimen/grid_item_height"
                    android:layout_row="0"
                    android:layout_column="2">

                    <Button
                        android:id="@+id/btn_traffic"
                        style="@style/OnboardingCourseBadgeButton"
                        android:text="@string/course_traffic"
                        android:paddingStart="@dimen/badge_button_padding_horizontal"
                        android:paddingEnd="@dimen/badge_button_padding_horizontal" />

                    <TextView
                        android:id="@+id/badge_text_rabbitmq"
                        android:layout_width="@dimen/badge_width"
                        android:layout_height="@dimen/badge_height"
                        android:layout_gravity="center"
                        android:background="@drawable/badge_background"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/badge_rabbitmq"
                        android:textAlignment="center"
                        android:textColor="@color/text_primary_light"
                        android:textSize="@dimen/font_size_badge"
                        android:gravity="center" />
                </FrameLayout>

                <!-- Second row -->
                <Button
                    android:id="@+id/btn_marketing"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_marketing"
                    android:layout_row="1"
                    android:layout_column="0" />

                <Button
                    android:id="@+id/btn_b2b_marketing"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_b2b_marketing"
                    android:layout_row="1"
                    android:layout_column="1" />

                <Button
                    android:id="@+id/btn_google_analytics"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_google_analytics"
                    android:layout_row="1"
                    android:layout_column="2" />

                <!-- Third row -->
                <Button
                    android:id="@+id/btn_researcher"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_researcher"
                    android:layout_row="2"
                    android:layout_column="0" />

                <Button
                    android:id="@+id/btn_web_analytics"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_web_analytics"
                    android:layout_row="2"
                    android:layout_column="1" />

                <FrameLayout
                    android:layout_width="@dimen/grid_item_badge_width"
                    android:layout_height="@dimen/grid_item_height"
                    android:layout_row="2"
                    android:layout_column="2">

                    <Button
                        android:id="@+id/btn_big_data"
                        style="@style/OnboardingCourseBadgeButton"
                        android:text="@string/course_big_data"
                        android:paddingStart="@dimen/badge_button_padding_horizontal"
                        android:paddingEnd="@dimen/badge_button_padding_horizontal" />

                    <TextView
                        android:id="@+id/badge_text_big_data"
                        android:layout_width="@dimen/badge_width"
                        android:layout_height="@dimen/badge_height"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/badge_big_data"
                        android:textAlignment="center"
                        android:textColor="@color/text_primary_light"
                        android:textSize="@dimen/font_size_badge"
                        android:gravity="center" />
                </FrameLayout>

                <!-- Fourth row -->
                <Button
                    android:id="@+id/btn_design"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_design"
                    android:layout_row="3"
                    android:layout_column="0" />

                <Button
                    android:id="@+id/btn_cinema4d"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_cinema4d"
                    android:layout_row="3"
                    android:layout_column="1" />

                <Button
                    android:id="@+id/btn_prompt_engineering"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_prompt_engineering"
                    android:layout_row="3"
                    android:layout_column="2" />

                <!-- Fifth row with badge -->
                <FrameLayout
                    android:layout_width="@dimen/grid_item_badge_width"
                    android:layout_height="@dimen/grid_item_height"
                    android:layout_row="3"
                    android:layout_column="0">

                    <Button
                        android:id="@+id/btn_three_js"
                        style="@style/OnboardingCourseBadgeButton"
                        android:text="@string/course_three_js"
                        android:paddingStart="@dimen/badge_button_padding_horizontal"
                        android:paddingEnd="@dimen/badge_button_padding_horizontal" />

                    <TextView
                        android:id="@+id/badge_text_three_js"
                        android:layout_width="@dimen/badge_width"
                        android:layout_height="@dimen/badge_height"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/badge_three_js"
                        android:textAlignment="center"
                        android:textColor="@color/text_primary_light"
                        android:textSize="@dimen/font_size_badge"
                        android:gravity="center" />
                </FrameLayout>

                <Button
                    android:id="@+id/btn_parsing"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_parsing"
                    android:layout_row="3"
                    android:layout_column="1" />

                <Button
                    android:id="@+id/btn_python"
                    style="@style/OnboardingCourseButton"
                    android:text="@string/course_python"
                    android:layout_row="3"
                    android:layout_column="2" />
            </GridLayout>

            <!-- Continue button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin_horizontal"
                android:layout_marginTop="@dimen/button_margin_top"
                android:layout_marginEnd="@dimen/button_margin_horizontal"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:text="@string/button_continue"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/font_size_button"
                app:backgroundTint="@color/button_continue_background"
                app:cornerRadius="@dimen/button_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/courses_grid"
                app:rippleColor="@color/button_ripple_dark" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom navigation indicator -->
    <View
        android:id="@+id/bottom_indicator"
        android:layout_width="@dimen/bottom_indicator_width"
        android:layout_height="@dimen/bottom_indicator_height"
        android:background="@color/text_primary_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>